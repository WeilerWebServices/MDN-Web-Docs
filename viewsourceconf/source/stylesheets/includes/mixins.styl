white-text() {
    color: #fff;

    h1, h2, h3, h4 {
        color: #fff;

    }

    a:not(.button) {
        color: #fff;
        text-decoration: underline;
    }

    a:not(.button):hover,
    a:not(.button):focus,
    a:not(.button):active {
        color: #fff;
        text-decoration: none;
    }
}
