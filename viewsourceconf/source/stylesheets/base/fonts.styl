// Moon Bold
@font-face {
    font-family: 'Moon Light';
    src: local('Moon Bold'), url($path-to-fonts + 'moon_bold-webfont.woff2') format('woff2'), url($path-to-fonts + 'moon_bold-webfont.woff') format('woff'), url($path-to-fonts + 'moon_bold-webfont.ttf') format('truetype');
    font-weight: bold;
    font-style: normal;
}

